@model SchoolManagement.ViewModels.AccountDetailsModel
@{
    ViewData["Title"] = "AddImage";
}

<h1>AddImage</h1>
<div class="row">
    <div class="col-md-6">
        <form asp-action="AddImage" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="UserId" type="hidden" />
                <input asp-for="UserName" class="form-control" type="hidden" />
                <input asp-for="Email" class="form-control" type="hidden" />
            <div class="form-group">
                <label asp-for="UserImage" class="control-label"></label>
                <input type="file" id="files" asp-for="UserImage" class="form-control" />
                <span asp-validation-for="UserImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

